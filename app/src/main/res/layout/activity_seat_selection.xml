<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#BAFFEB3B"
    tools:context=".SeatSelection">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:src="@drawable/seats"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Price: 5$/ Seat "
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:paddingLeft="30dp"
        android:textColorLink="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
         />
    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:paddingLeft="155dp"
        app:srcCompat="@drawable/seatselectin" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Enter Seats:"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:paddingLeft="30dp"
        android:textSize="24sp"
        android:textStyle="bold"
         />
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/textview_border"
        android:paddingLeft="30dp"
        android:hint="Add Seats Like this A1, A2, A3"
        android:inputType="textPersonName"
        android:shadowColor="#000000"
        android:textColor="#000000"
        android:textColorHint="#6F6E6E"
        android:textSize="24dp"
         />



    <Button
        android:id="@+id/btncardpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="Proceed to Payment"
        android:textColorHint="#6F6E6E"
        android:background="@color/black"
        android:textColor="@color/white"
        />










</LinearLayout>
