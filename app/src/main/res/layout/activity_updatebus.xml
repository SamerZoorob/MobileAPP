<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mm"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".updatebus">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="262dp"
        android:layout_height="228dp"
        app:srcCompat="@drawable/updatebus" />


    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:hint="ID"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_directions_bus_24"
        android:drawablePadding="3dp"
        android:textColorHint="#000"
        android:textSize="25dp"
        >

    </EditText>

    <EditText
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="3dp"
        android:hint="Departure city"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textColorHint="#000"
        android:textSize="25dp"
        >

    </EditText>

    <EditText
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="3dp"
        android:hint="Arrival city"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textColorHint="#000"
        android:textSize="25dp"
        >

    </EditText>

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="3dp"
        android:hint="Date"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textColorHint="#000"
        android:textSize="25dp"
        >

    </EditText>

    <EditText
        android:id="@+id/seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:hint="Total Seats"
        android:drawableLeft="@drawable/ic_baseline_airline_seat_recline_normal_24"
        android:drawablePadding="3dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="#000"
        android:textSize="25dp"
        >

    </EditText>

    <Button
        android:id="@+id/updatebus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="UPDATE BUS"
        android:textSize="25dp"
        >

    </Button>

    <Button
        android:id="@+id/button06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        />



</LinearLayout>